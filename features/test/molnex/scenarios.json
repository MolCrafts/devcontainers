{
    "cpu": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
        "features": {
            "molnex": {
                "backend": "cpu"
            }
        }
    },
    "cuda": {
        "image": "nvcr.io/nvidia/pytorch:25.12-py3",
        "runArgs": ["--gpus", "all"],
        "features": {
            "molnex": {
                "backend": "cuda"
            }
        }
    }
}