{
    "name": "molnex",
    "id": "molnex",
    "version": "0.0.3",
    "description": "A feature for setting up molnex - unified modeling of molecular potentials and properties with physics-aware ML",
    "licenseURL": "https://github.com/MolCrafts/devcontainers/blob/main/LICENSE",
    "dependsOn": {
        "ghcr.io/molcrafts/devcontainers/molpy:latest": {}
    },
    "containerEnv": {
        "PATH": "/usr/local/cuda/bin:${PATH}",
        "LD_LIBRARY_PATH": "/usr/local/cuda/lib64:${LD_LIBRARY_PATH}"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "options": {
        "backend": {
            "type": "string",
            "enum": [
                "cpu",
                "cuda"
            ],
            "default": "cpu",
            "description": "PyTorch compute backend. If cuda, the CUDA version is inferred from the base image."
        }
    }
}