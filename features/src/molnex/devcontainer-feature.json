{
    "name": "molnex",
    "id": "molnex",
    "version": "0.0.1",
    "description": "A feature for setting up molnex - unified modeling of molecular potentials and properties with physics-aware ML",
    "licenseURL": "https://github.com/MolCrafts/devcontainers/blob/main/LICENSE",
    "dependsOn": {
        "../molpy": {}
    },
    "containerEnv": {
        "PATH": "/usr/local/cuda/bin:${PATH}",
        "LD_LIBRARY_PATH": "/usr/local/cuda/lib64:${LD_LIBRARY_PATH}"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "options": {
        "backend": {
            "type": "string",
            "enum": [
                "cpu",
                "cuda"
            ],
            "default": "cpu",
            "description": "PyTorch compute backend: 'cpu' for CPU-only or 'cuda' for GPU support"
        },
        "cudaVersion": {
            "type": "string",
            "default": "12.6",
            "description": "CUDA version to install (only used when backend is 'cuda'). Supported: '13.0', '12.8', '12.6', '12.1', '11.8'"
        }
    }
}